{{!-- views/auth/loginH.hbs --}}
<div class="login-box">
  <h2>Hoitajan kirjautuminen</h2>
  <form action="/auth/loginH" method="POST">
    <label class="labeL">Sähköposti
      <input type="email" name="email" placeholder="example@example.com" required />
    </label>
    <label class="labeL">Salasana
      <input type="password" name="password" placeholder="********" required />
    </label>
    <button type="submit">Kirjaudu</button>
    {{#if errorMessage}}
      <p class="error">{{errorMessage}}</p>
    {{/if}}
    <div id="logbottom">
      <p class="message"><a href="#">Unohtuiko salasana?</a></p>
    </div>
  </form>
</div>
