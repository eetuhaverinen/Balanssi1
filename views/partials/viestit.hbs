
<body>
  <div class="container mt-3">
    <div class="border p-3">
      {{!-- <div class="msg"></div> --}}
      <h3>Lähetä viesti</h3>
      <form id="messageForm" class="col s12" method="POST" action="/viestit" enctype="multipart/form-data">
        <div class="form-group row">
          <label for="recipient" class="col-sm-2 col-form-label">Vastaanottaja:</label>
          <div class="col-sm-10">
            <input type="text" class="form-control" id="recipient" name="recipient" required>
          </div>
        </div>
        <div class="form-group row">
          <label for="subject" class="col-sm-2 col-form-label">Aihe:</label>
          <div class="col-sm-10">
            <input type="text" class="form-control" id="subject" name="subject" required>
          </div>
        </div>
        <div class="form-group row">
          <label for="message" class="col-sm-2 col-form-label">Viesti:</label>
          <div class="col-sm-10">
            <textarea class="form-control" id="message" name="message" rows="4"></textarea>
          </div>
        </div>
        <div class="form-group row">
          <label for="attachment" class="col-sm-2 col-form-label">Lisää kuva:</label>
          <div class="col-sm-10">
            <input type="file" class="form-control-file" id="attachment" name="attachment">
          </div>
        </div>
        <button type="submit" class="btn btn-primary">Lähetä viesti</button>
      </form>
      <h2>Saapuneet viestit</h2>
      <div class="messages-box">
        {{#each messages}}
        <div class="message">
          <p>From: {{sender.email}}</p>
          <p>Subject: {{subject}}</p>
          <p>Message: {{message}}</p>
          {{#if attachment}}
          <p>
            Liite: <a href="{{attachment}}" target="_blank">Katso</a>
          </p>
          {{/if}}
          <hr />
        </div>
        {{/each}}
      </div>
    </div>
