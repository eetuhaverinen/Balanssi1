<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>HRV Chart</title>
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>
<body>
  <div class="row">
    <form class="col 12">
      HRV 
      <canvas id="myChart"></canvas>
    </form>
  </div>

  <script>
    // Fetch HRV data
    fetch('/hrv-data')
      .then(response => response.json())
      .then(data => {
        // Set up the chart
        var ctx = document.getElementById('myChart').getContext('2d');
        var chart = new Chart(ctx, {
          type: 'line',
          data: {
            labels: data.labels,
            datasets: [{
              label: 'HRV',
              data: data.values,
              fill: false,
              borderColor: 'rgb(75, 192, 192)',
              tension: 0.1
            }]
          }
        });
      })
      .catch(error => console.error(error));
  </script>
</body>
</html>
